{#####################################################

Purpose:
Configure layer2 profile interface for dellos10 Devices.

#####################################################}
{% if vlt is defined and vlt %}
{% for vlti in vlt.vlti %}
interface ethernet{{ vlti }}
 description "SW Interlink_VLTi"
 no switchport
 no shutdown
 mtu 9216
 flowcontrol receive on
!
{% endfor %}
vlt-domain {{ vlt.domain_id }}
 delay-restore 300
 discovery-interface ethernet{{ vlt.vlti|join(',') }}
 peer-routing
 vlt-mac {{ tor_pair_vmac }}
!
{% endif %}
{% if uplink_bond %}
interface port-channel{{ uplink_bond.bond_id }}
 description "{{ uplink_bond.desc }}"
 switchport mode trunk
 switchport access vlan {{ native_vlan.id }}
 switchport trunk allowed vlan {{ trunk_bond.vlan_list|join(",") }}
 no shutdown
{% if vlt is defined and vlt %}
 vlt-port-channel {{ uplink_bond.bond_id }}
{% endif %}
!
{% endif %}
{% for member in uplink_bond.bmem_indiv %}
interface ethernet{{ member }}
 description "{{ uplink_bond.desc }}_Member of PO{{ uplink_bond.bond_id }}"
 channel-group {{ uplink_bond.bond_id }} mode active
 no switchport
 no shutdown
 mtu 9216
!
{% endfor %}
{% if trunk_bond.total is defined and trunk_bond.total %}
{% set b_total = trunk_bond.total | int + 1 %}
{% for i in range(1, b_total, 1) %}
{% set bond_id = 100 + i %}
interface port-channel{{ bond_id }}
 description "VLT PO to Compute{{ i }}"
 switchport mode trunk
 switchport access vlan {{ native_vlan.id }}
 switchport trunk allowed vlan {{ trunk_bond.vlan_list|join(",") }}
 no shutdown
{% if vlt is defined and vlt %}
 vlt-port-channel {{ bond_id }}
{% endif %}
!
{# Generate Port-Channel Member as Range CFG #}
{% if trunk_bond.bmem_range is defined and trunk_bond.bmem_range %}
{% set member = trunk_bond.bmem_range[i-1] %}
interface range ethernet{{ member }}
 channel-group {{ bond_id }} mode active
 no switchport
 no shutdown
 mtu 9216
!
{% endif %}
{% if trunk_bond.bmem_indiv is defined and trunk_bond.bmem_indiv %}
{% set member = trunk_bond.bmem_indiv[i-1] %}
interface ethernet{{ member }}
 description "VLT PO{{ bond_id }} member to Compute{{ i }}"
 channel-group {{ bond_id }} mode active
 no switchport
 no shutdown
 mtu 9216
!
{% endif %}
{% endfor %}
{% endif %}
